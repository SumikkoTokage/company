<!DOCTYPE html>
<html>
<head>
  <title></title>
</head>
<body>
    <%= render partial: 'products/header' %>
    <div class="main clearfix">
        <div class="main-content">
            <div class="body">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-6">
                            <h1>プロフィール編集</h1>
                            <%= form_for(@user) do |f| %>
                                <div>
                                    <label>ニックネーム</label>
                                    <%= f.text_field :nickname %>
                                </div>
                                <div>
                                    <label>メールアドレス</label>
                                    <%= f.text_field :email %>
                                </div>
                                <%= f.submit "変更を保存", class:"btn" %>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        <p><%= link_to "退会についてはコチラ", users_resignation_path %></p>
    </div>
  </div>
  <%= render partial: 'products/footer' %>
</body>
</html>

 