<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :クリエイター名 %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "クリエイター名" %>
  </div>
  <div class="field">
    <%= f.label :電話番号 %><br />
    <%= f.text_field :telephone, autofocus: true, autocomplete: "telephone", placeholder: "090-1234-1234" %>
  </div>
  <div class="field">
    <%= f.label :SHOP名 %><br />
    <%= f.text_field :shop_name, autofocus: true, autocomplete: "shop_name", placeholder: "SHOP名" %>
  </div>
  <div class="field">
    <%= f.label :SHOPアイコン %><br />
    <%= f.attachment_field :image %>
  </div>
  <div class="field">
    <%= f.label :SHOPの説明文 %><br />
    <%= f.text_area :description, autofocus: true, autocomplete: "description", placeholder: "SHOPの説明文" %>
  </div>
  <div class="field">
    <%= f.label :発送までの日数 %><br />
    <%= f.select :send_date_id, Creator.send_date_ids.keys, {prompt: '選択してください'} %>日以内に発送する
  </div>

  <%= f.fields_for :bank_accounts, BankAccount.new do |ba| %>
    <div class="field">
        <%= ba.label :金融機関コード %><br />
        <%= ba.number_field :bank_code, autofocus: true, autocomplete: "bank_code", placeholder: "例：　1234" %>
    </div>
    <div class="field">
        <%= ba.label :金融機関名 %><br />
        <%= ba.text_field :bank_name, autofocus: true, autocomplete: "bank_name", placeholder: "" %>
    </div>
    <div class="field">
        <%= ba.label :支店コード %><br />
        <%= ba.number_field :branch_code_id, autofocus: true, autocomplete: "branch_code_id", placeholder: "例：　123" %>
    </div>
    <div class="field">
        <%= ba.label :預金種別 %><br />
        <%= ba.select :deposit_type_id, BankAccount.deposit_type_ids.keys, {prompt: '選択してください'} %>
    </div>
    <div class="field">
        <%= ba.label :口座番号 %><br />
        <%= ba.number_field :number, autofocus: true, autocomplete: "number", placeholder: "例：　0123456" %>
    </div>
    <div class="field">
        <%= ba.label :講座名義カナ %><br />
        <%= ba.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ヤマダタロウ" %>
    </div>
  <%end%>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "password", placeholder: "6文字以上の半角英字" %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "password_confirmation", placeholder: "パスワード確認" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "creators/shared/links" %>
